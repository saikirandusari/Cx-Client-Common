<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.checkmarx.client</groupId>
  <artifactId>checkmarx-client</artifactId>
  <version>8.41.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>Checkmarx Client</name>
  <description>Enables web services access Checkmarx SAST and OSA scan.</description>
  <url>https://www.checkmarx.com</url>

  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <!--<log4j.version>1.2.17</log4j.version>-->
    <slf4j.version>1.7.5</slf4j.version>
  </properties>

  <dependencies>

    <!-- Logger -->
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-api</artifactId>
      <version>${slf4j.version}</version>
    </dependency>
    <!-- 3rd parties -->
    <dependency>
      <groupId>org.glassfish.jersey.core</groupId>
      <artifactId>jersey-client</artifactId>
      <version>2.22.2</version>
    </dependency>
    <dependency>
      <groupId>org.glassfish.jersey.media</groupId>
      <artifactId>jersey-media-json-jackson</artifactId>
      <version>2.22.2</version>
    </dependency>
    <dependency>
      <groupId>org.glassfish.jersey.media</groupId>
      <artifactId>jersey-media-multipart</artifactId>
      <version>2.22.2</version>
    </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>3.0</version>
    </dependency>
    <dependency>
      <groupId>javax.ws.rs</groupId>
      <artifactId>javax.ws.rs-api</artifactId>
      <version>2.0.1</version>
    </dependency>
    <dependency>
      <groupId>org.codehaus.plexus</groupId>
      <artifactId>plexus-utils</artifactId>
      <version>3.0.24</version>
    </dependency>
    <dependency>
      <groupId>commons-io</groupId>
      <artifactId>commons-io</artifactId>
      <version>2.5</version>
    </dependency>

  </dependencies>


  <developers>
    <developer>
      <name>Dor Golan</name>
      <email>dor.golan@checkmarx.com</email>
      <organization>Checkmarx</organization>
      <organizationUrl>https://www.checkmarx.com/</organizationUrl>
      <roles>
        <role>Architect</role>
        <role>Developer</role>
      </roles>
      <properties>
        <picUrl>http://i.imgur.com/44Iil53.png</picUrl>
      </properties>
    </developer>
  </developers>
  
  <distributionManagement>
	<repository>
		<id>bintray-cxadmin-CxPluginsCommon</id>
		<name>cxadmin-CxPluginsCommon</name>
		<url>https://api.bintray.com/maven/cxadmin/CxPluginsCommon/Cx-Client/;publish=1</url>
    </repository>
  </distributionManagement>
  
</project>